@charset "utf-8";
html{width: 100%;height: 100%;}
body{background: #ebf0f2;min-width:320px;max-width:540px;width: 100%;height: 100%;}
/**********header************/
.header {
    height: 42px;
    width: 100%;
    background: #fff;
    text-align: center;
    line-height: 42px;
    font-size: 16px;
    border-bottom: 1px solid #DFDFDF;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9999;
}
.header>div {
    position: absolute;
    top: 0;
}
.header img {
    margin: 0;
    max-width: 20px;
    padding-top: 0.7rem;
}
.back {
    left: 12px;
    position: absolute;
}
.cloce {right: 53px;}
.search{right:12px;}
/********container *********/
.container {
    background-color: #fff;
}
.container>a {
    display: block;
    color: #666;
}
.container>div {
    width: 93%;
    margin: 0 auto;
    border-bottom: 1px solid #DFDFDF;
}
.t_content {
    padding: 11px 0;
}
.t_head {
    font-size: 16px;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.t_text {
    color: #A9A9A9;
}
.t_topic{
	padding: 0 0 10px 0;
	max-height: 100px;
	overflow: hidden;
	overflow-y: auto;
}
.container .without{
	height: 12px;
	width: 100%;
	background:#ebf0f2;
	border-bottom: 1px solid #DFDFDF;
    border-top: 1px solid #DFDFDF;
}
.strip.contents {
    height: 32px;
    line-height: 28px;
    width: 100%;
}
.none_b {
    border-bottom: 0 !important;
}
.strip.auto.items.tags {
    border-top: 1px solid #DFDFDF;
}
.contents ul,.contents ul li{float:left;}
.contents ul {
    width: 93%;
    height: 100%;
    margin-left: 1rem;
}
.contents ul li{
	width:20%;
	height: 100%;
	color: #989898;
}
.contents ul li i {
    height: 100%;
    display: inline-block;
}
.border_b {
    border-bottom: 2px solid #EC843D;
    color: #333;
}
.c_test>div{display:none;}
.c_test_div {
    position: relative;
    display: block !important;
}
.comment.c_test_div>div>div{display:inline-block;}
.comment.c_test_div>div {
    border-bottom: 1px solid #DFDFDF;
    padding: 6px 0;
}
.comment .head {
    width: 10%;
    border: 1px solid #E0DEDF;
    border-radius: 4px;
    position: absolute;
}
.covers {
    width: 83%;
    padding-left: 14%;
}
.c_date {
    position: absolute;
    right: 0;
}
.c_name {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    width: 70%;
}
.c_comment {
    position: relative;
}
/* .c_img {
    width: 8px;
    position: absolute;
    top: 8px;
    left: -7px;
} */
.c_text {
    min-height: 20px;
 /*    border: 1px solid #D1D1D1;
    border-radius: 6px; */
    display: inline-block;
    padding: 9px 0;
}
.c_comment>img {
    margin: 0;
    border-radius: 6px;
    max-width: 90px;
}
.c_vioce {
    min-height: 28px;
    display: inline-block;
    border: 1px solid #ccc;
    width: 50px;
}
span.c_spike {
    position: absolute;
    top: 4px;
    margin-left: 6px;
}
.c_vioce>img {
    width: 14px;
    position: absolute;
    top: 5px;
    left: 10px;
}
.d_files>div>div{
	display: inline-block;
}
.files>img {
    margin: 0;
    height: 100%;
    border-radius: 5px;
}
.files {
    width: 3.4rem;
    height: 4.2rem;
    border-radius: 5px;
}
.files_details {
    position: absolute;
    width: 80%;
    padding: 0.6rem 0 0 0.6rem;
}
.files_details>span {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    width: 100%;
    display: inline-block;
}
.d_files>.files{
	border-bottom: 1px solid #DFDFDF;
    padding: 6px 0;
}
.d_files {
    border-bottom: 1px solid #DFDFDF;
    position: relative;
    overflow: hidden;
}
.files_content {
    width: 100%;
    position: relative;
    padding: 0.3rem 0;
}
.record {
    border-bottom: 1px solid #DFDFDF;
    padding: 0.5rem 0;
}
/**********footer***********/
.footer {
    font-size: 12px;
    background: #fff;
    width: 100%;
    position: fixed;
    bottom: 0;
    min-width: 320px;
    max-width: 540px;
    z-index: 999;
    border-top: 1px solid #DFDFDF;
}
.footer>div>span {
    display: inline-block;
    width: 32px;
    margin-top: 8px;
    position: absolute;
}
.footer .input_s {
    width: auto;
}
.footer .input_s {
    width: auto;
    height: 24px;
    margin-top: 3px;
    width: 58%;
    overflow-x: hidden;
    padding: 13px 0 3px 3px;
    border-radius: 5px;
    border: 1px solid #ccc;
}
span.voice {
    top: 0;
    left: 8px;
}
span.face {
    top: 0;
    right: 42px;
}
span.add {
    top: 0;
    right: 6px;
}
span.input_s {
    top: 0;
    left: 46px;
}
.input_s input {
    width: 100%;
    height: 78%;
    outline: none;
    border: 1px solid #ccc;
    border-radius: 8px;
    padding-left: 8px;
    margin: 5px 0;
}
.f_add div{
	display: inline-block;
    width: 13%;
    position: relative;
}
.f_add input{
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    opacity: 0;
}
.f_add img{
	margin:0;
	
}
.input_s *{
	display: inline-block;
}
.input_s img {
    margin-top: -6px;
}
/***********qq**********/
.emotion{
	position: absolute;
    top: 8px;
    right: 42px;
    width: 32px;
    height: 32px;
}
#facebox {
    left: 0 ;
    top: 50px;
    width: 300%;
    padding: 3px 3px 3px 4px;
}
#facebox table{width: 100%;}
#facebox tr {
    display: inline-block;
    height: 97px;
    white-space: nowrap;
    overflow-x: auto;
    overflow-y: hidden;
    width: 33.3%;
}
#facebox td {
    display: inline-block;
    width: 13%;
    height: 32px;
    float: left;
    overflow-y: hidden;
    margin: 0 2px;
}
#facebox td img {
    width: 53%;
}
.delete_img {
    display: inline-block;
    text-align: center;
    font-size: 1.3rem;
    z-index: 9999;
    width: 4%;
    height: 33px;
    float: left;
}
@media screen and (max-width:399px) {
    html{
        font-size: 12px;
    }
 }
 @media (min-width: 400px) and (max-width: 480px) {
    .footer .input_s {
    width: 67%;
	}
 }
 @media screen and (min-width: 481px) {
    html{
        font-size: 14px;
    }
 }
.ban_scroll{ overflow: hidden;}
.quick_mask{
	position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 999;
    background: #333;
    opacity: 0.9;
    display:none;
    text-align: center;
    color:#fff;
}
.quick_mask ul {
    width: 210px;
    height: 24%;
    margin: 0 auto;
    margin-top: 156px;
}
.quick_mask ul li {
    width: 46px;
    float: left;
    padding: 5px 12px;
    margin-top: 1200px;
}
.m_close{
	font-size: 2rem;
    position: absolute;
    left: 48%;
    bottom: 11px;
}
