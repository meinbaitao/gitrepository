@charset "utf-8";
*{margin: 0;padding: 0;}
body{
    padding: 12px 21px;
}
.logo{width: 100%}
.logo>a{text-decoration: none}
.regist{
	float: left
    display: inline-block;
    height: 22px;
    font: 24px/36px "\5FAE\8F6F\96C5\9ED1";
    color: #333333;
}
.content p{  font: 14px/20px "\5FAE\8F6F\96C5\9ED1";
    color: #666666;
    margin: 10px 0px;
    text-indent: 32px;}
.content h2{
    color: #55A9D7;
    font-size: 20px;
    font-family: "\5FAE\8F6F\96C5\9ED1";
}
.content ol{
    margin: 0px 0px 10px 48px;
}
.content ol li{
    font: 14px/20px "\5FAE\8F6F\96C5\9ED1";
    color: #666666;
}
.content{
    float: left;
    width: 100%;
}
.content .right{
    color: #656565;
    text-indent: 0px;
	margin-bottom: 30px;
}
